<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_ad_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0px"
    android:layout_marginEnd="0px"
    android:layout_marginLeft="0px"
    android:layout_marginRight="0px"
    android:layout_marginStart="0px"
    android:layout_marginTop="0px"
    android:fitsSystemWindows="true"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingStart="0dp"
    android:paddingTop="0dp"

    tools:context="com.lychee.sely.adstv.ads.custom.design.preview.CustomAdDesignCanvasActivity"
    tools:padding="0dp">
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    -->

    <com.lychee.sely.adstv.ads.custom.design.view.CustomAdDesignView
        android:id="@+id/custom_ad_design_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lb_tv_white" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_change_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="32dp"
        android:src="@drawable/lb_ic_more" />


</FrameLayout>
